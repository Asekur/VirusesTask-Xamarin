<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VirusTask.Themes.LightTheme">

    <Color x:Key="BackgroundColor">#2B2B2B</Color>
    <Color x:Key="TextColor">#E1E1E1</Color>
    <Color x:Key="BorderColor">#E1E1E1</Color>
    <Color x:Key="PhotoBackground">#1B1B1B</Color>
    <Color x:Key="TintColor">#E1E1E1</Color>
    <Color x:Key="ThumbColor">#E1E1E1</Color>
    <Color x:Key="MinimumTrackColor">#E1E1E1</Color>
    <Color x:Key="MaximumTrackColor">#E1E1E1</Color>
    <Color x:Key="FrameColor">#FFFFFFFF</Color>
    <Color x:Key="TextPrimaryColor">#B0000000</Color>
    <Color x:Key="TextSecondaryColor">#858585</Color>
    <Style x:Key="Title" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource TextPrimaryColor}"/>
        <Setter Property="FontSize" Value="Large"/>
    </Style>
</ResourceDictionary>
